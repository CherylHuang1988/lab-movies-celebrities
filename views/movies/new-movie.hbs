<h2>Adding New Movie</h2>
<form action="/movies/create" method="POST">
<label>Title
    <input type="text" name="title" placeholder="Type the title"/>
</label>
<br/>
<br/>
<label>Genre
    <input type="text" name="genre" placeholder="Type the genre"/>
</label>
<br/>
<br/>
<label>Plot
    <input type="text" name="plot" placeholder="Type the Plot"/>
</label>
<br/>
<br/>
<label>Cast
    <select name="cast" multiple>
        {{#each allCelebrities}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</label>    
<br/>
<br/>
<button type="submit">Submit</button>
</form>